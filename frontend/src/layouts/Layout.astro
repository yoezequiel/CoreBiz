---
interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
}

const {
    title = "CoreBiz ERP - Sistema de Gesti칩n Empresarial",
    description = "Sistema ERP multi-tenant profesional para gesti칩n de clientes, ventas y an치lisis empresarial. Arquitectura escalable con Express.js, Astro y Turso.",
    ogImage = "/og-image.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title.includes("CoreBiz") ? title : `${title} - CoreBiz`;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />

        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <!-- Primary Meta Tags -->
        <title>{fullTitle}</title>
        <meta name="title" content={fullTitle} />
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={fullTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(ogImage, Astro.url)} />
        <meta property="og:site_name" content="CoreBiz ERP" />
        <meta property="og:locale" content="es_ES" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={fullTitle} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(ogImage, Astro.url)} />

        <!-- Additional Meta -->
        <meta
            name="keywords"
            content="ERP, sistema de gesti칩n, multi-tenant, CRM, ventas, clientes, dashboard, analytics, Express.js, Astro, TypeScript"
        />
        <meta name="author" content="CoreBiz" />
        <meta name="theme-color" content="#2563eb" />
    </head>
    <body class="bg-gray-50 min-h-screen">
        <slot />
    </body>
</html>

<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
</style>
